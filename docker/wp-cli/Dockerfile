FROM wordpress:cli
ARG WORDPRESS_DIR
ARG SHARED_USER
ARG SHARED_GROUP
ARG SHARED_UID
ARG SHARED_GID
USER root
RUN addgroup -g $SHARED_GID $SHARED_GROUP
RUN adduser -G $SHARED_GROUP -u $SHARED_UID -g "" -H -D $SHARED_USER
RUN addgroup www-data $SHARED_USER
RUN chown -R $SHARED_UID:$SHARED_GID $WORDPRESS_DIR
RUN chmod -R 755 $WORDPRESS_DIR
# USER $SHARED_USER